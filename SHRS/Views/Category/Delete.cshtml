@model Category
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer 

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@localizer["Delete Category"]</h2>
            
           @*@ <div asp-validation-summary="All"></div>*@
            <div class="mb-3">
                <label>@localizer["Name"]</label>
                <input asp-for="Name" disapled class="form-control"></input>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>@localizer["DisplayOrder"]</label>
                <input asp-for="DisplayOrder" disapled class="form-control"></input>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">@localizer["Delete"]</button>

        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">@localizer["Back To List"]</a>

    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}