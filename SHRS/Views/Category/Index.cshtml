@model IEnumerable<Category>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer 
@{
    ViewData["Title"] = "Index";
}


   <div class="container p-3">
     <div class="row pt-4">
       <div class="col-6">
            <h2 class="text-primary">@localizer["Category List"]</h2>
       </div>
       <div class="col-6 text-end">
           <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; @localizer["Create New Category"]
           </a>
       </div>
   </div>
   </div>
   <br /> <br />

<table class="table table-border table-striped" style="width:100">
   <thead>
       <tr>
           <th>
               @localizer["Category Name"]
           </th>
           <th>
               @localizer["Display Order"]
           </th>
           <th></th>
       </tr>
   </thead> 
   @foreach(var obj in Model)
    {
        <tr>
            <td width="50%">
                @obj.Name
            </td>
            <td width="30%">
                @obj.DisplayOrder
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>@localizer["Edit"]</a>

                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                class="btn btn-primary mx-2"><i class="bi bi-trash3"></i>@localizer["Delete"]</a>

                </div>
            </td>
        </tr>
    }

</table>

